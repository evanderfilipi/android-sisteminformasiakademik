<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mapelNilaiTxt"
                android:textSize="20dp"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ujian Harian"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uhNilaiTxt"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tugas"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:id="@+id/tugasNilaiTxt"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ujian Tengah Semester"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/utsNilaiTxt"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ujian Akhir Semester"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uasNilaiTxt"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nilai Akhir"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nilaiAkhirTxt"
                android:textSize="20dp"
                android:textAlignment="center" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guru/Pengajar"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guru3Txt"
                android:textStyle="bold"
                android:textColor="#FFA600"
                android:textSize="20dp"
                android:textAlignment="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>