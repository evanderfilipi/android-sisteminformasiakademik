<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.akademik.sisteminformasi.aplikasisia.ProfileUserActivity"
    tools:showIn="@layout/activity_profile_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.akademik.sisteminformasi.aplikasisia.model.CircularNetworkImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:id="@+id/profileImg2"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/pilihBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignBottom="@+id/profileImg2"
                    android:layout_alignEnd="@+id/profileImg2"
                    android:layout_alignRight="@+id/profileImg2"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/photo_icon" />

            </RelativeLayout>

            <View
                android:id="@+id/View2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text=""
                android:layout_marginBottom="5dp"
                android:id="@+id/userIdHeadTxt"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textSize="18dp"
                android:id="@+id/userIdTxt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:id="@+id/statusTxt"/>

            <View
                android:id="@+id/View3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Nama"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nama_Edt"
                android:singleLine="true"
                android:hint="Nama Lengkap"
                android:background="@android:drawable/editbox_background_normal"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>

            <View
                android:id="@+id/View4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Tanggal Lahir"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/calenderBtn"
                    android:background="@drawable/ic_calendar"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tanggal_Edt"
                    android:singleLine="true"
                    android:hint="YYYY-MM-DD"
                    android:layout_marginLeft="5dp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <View
                android:id="@+id/View5"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Nomor Telepon/HP"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/telepon_Edt"
                android:singleLine="true"
                android:hint="Nomor Telepon/HP"
                android:background="@android:drawable/editbox_background_normal"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>

            <View
                android:id="@+id/View6"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Alamat"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alamat_Edt"
                android:hint="Alamat Rumah"
                android:textAlignment="center"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginBottom="10dp"
                android:minLines="3"
                android:inputType="textMultiLine"/>

            <View
                android:id="@+id/View7"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/simpanPBtn"
                android:text="SIMPAN PROFIL"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordBtn"
                android:text="UBAH PASSWORD"
                android:textSize="20dp"
                android:textColor="#fff"
                android:backgroundTint="@android:color/holo_green_dark"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/showRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#a2000000"
        android:visibility="invisible">

        <com.akademik.sisteminformasi.aplikasisia.model.CustomNetworkImageView
            android:id="@+id/showImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@android:drawable/btn_dialog" />

    </RelativeLayout>

</RelativeLayout>
