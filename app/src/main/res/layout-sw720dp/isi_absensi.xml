<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mapelAbsensiTxt"
                android:textSize="32dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakit"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sakitTxt"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Izin"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:textAlignment="center"
                android:id="@+id/izinTxt"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanpa Keterangan"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tanpaKeteranganTxt"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Pertemuan"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pertemuanTxt"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:background="#CDCDCD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guru/Pengajar"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/guruTxt"
                android:textStyle="bold"
                android:textColor="#FFA600"
                android:textSize="32dp"
                android:textAlignment="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>