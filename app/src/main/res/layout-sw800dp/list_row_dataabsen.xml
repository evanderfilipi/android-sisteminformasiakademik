<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.akademik.sisteminformasi.aplikasisia.model.CircularNetworkImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/foto_Siswa_AbsenImg"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_Siswa_AbsenTxt"
            android:layout_marginBottom="14dp"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nis_Siswa_AbsenTxt"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/kelas_Siswa_AbsenTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:textColor="#758FC8" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>