<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/foto_Mapel_NilaiImg"
        android:layout_marginTop="2dp"
        android:background="@drawable/jadwal_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/id_JadwalTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tahun_Ajaran_JadwalTxt"
            android:layout_marginBottom="14dp"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jenis_JadwalTxt"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hari_JadwalTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:textColor="#0AA1FF" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>